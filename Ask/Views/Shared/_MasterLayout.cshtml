</head>
<body class="@ViewBag.BodyClass">
    @if (ViewBag.GTM_Body != null)
    {
        @Html.Raw(ViewBag.GTM_Body)
    }
    @RenderSection("ContTArea", required: false)
    @*內容區*@
    @RenderBody()
    @RenderSection("ContDArea", required: false)

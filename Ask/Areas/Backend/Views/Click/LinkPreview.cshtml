@model WorkV3.Models.ClickLinkModel
@{
    Layout = null;
}

<li>
    <div class="col-2">
        <div class="fileuploader fileuploader-theme-thumbnails normal">
            <div class="fileuploader-items link">
                <ul class="fileuploader-items-list">
                    <li class="fileuploader-item">
                        <div class="columns">
                            <div class="column-title">
                               <div class="title-name">@Model.Link</div>
                            </div>
                        </div>
                    </li>
                    <div class="actions-holder">
                        <a class="btn-white-o square transparent fileuploader-action-text tooltip click" title="編輯" href="@Url.Action("LinkEdit", "Click")"><i class="cc cc-edit-o"></i></a>
                        <a class="btn-del btn-white-o square transparent fileuploader-action-remove img-del tooltip delclick" title="刪除" href="javascript:"><i class="cc cc-close"></i></a>
                    </div>
                </ul>
            </div>
        </div>
    </div>
</li>
                                <div class="title inline">刊登期間</div>
                                <div class="input-field inline">
                                    <input type='text' name="IssueStart" class="input-cal datetimepicker" value="@ViewBag.Search["IssueStart"].ToString()">
                                </div>
                                <span style="vertical-align: bottom;">-</span>
